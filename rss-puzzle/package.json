{
  "name": "rss-puzzle",
  "scripts": {
    "start": "webpack serve --config ./webpack.config.js --env mode=dev",
    "build": "webpack --config ./webpack.config.js --env mode=prod",
    "lint": "eslint \"src/**.ts\"",
    "lint:fix": "eslint --fix \"src/**.ts\"",
    "prepare": "cd .. && husky rss-puzzle/.husky",
    "lint:staged": "lint-staged",
    "validate-branch-name": "validate-branch-name"
  },
  "devDependencies": {
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.10.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-typescript-sort-keys": "^3.2.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mini-css-extract-plugin": "^2.8.1",
    "modern-normalize": "^2.0.0",
    "prettier": "^3.2.5",
    "sass-loader": "^14.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.2",
    "validate-branch-name": "^1.3.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "webpack-merge": "^5.10.0"
  },
  "lint-staged": {
    "*.ts": "eslint --cache \"src/**.ts\""
  },
  "validate-branch-name": {
    "pattern": "^(feat|fix|refactor|release|chore)/RSS-PZ.+",
    "errorMsg": "Invalid branch name"
  }
}
